@model LWFStatsWeb.Models.SyncViewModels.IndexViewModel

@{
    ViewBag.Title = "Syncs";
}

<h2>Syncs</h2>

<table id="myTable" class="table table-hover table-responsive tablesorter">
    <thead>
        <tr>
            <th width="35"></th>
            <th>
                Clan
            </th>
            @foreach (var warSync in Model.Syncs)
            {
                <th>
                    @Html.DisplayFor(s => warSync.Name)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in Model.Clans)
        {
            <tr>
                <td style="padding:0px;">
                    <img src="@clan.BadgeURL" width="35" height="35" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => clan.Name)
                </td>
                @foreach (var warResult in clan.Results)
                {
                    var result_class = "";
                    if (warResult.IsAlliance)
                    {
                        if (warResult.Result == "win")
                        {
                            result_class = "text-success";
                        }
                        else
                        {
                            result_class = "text-danger";
                        }
                    }
                    else
                    {
                        result_class = "text-muted";
                    }
                    <td class="@result_class">
                        @Html.DisplayFor(modelItem => warResult.OpponentName)
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script type="text/javascript">

        $(function () {
            $("#myTable").tablesorter();
        });

    </script>
}