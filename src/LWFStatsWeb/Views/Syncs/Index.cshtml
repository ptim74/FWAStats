@model LWFStatsWeb.Models.SyncViewModels.IndexViewModel

@{
    ViewBag.Title = "Syncs";
}

<h2>Syncs</h2>

@{
    var grp_all = Model.Group == "" ? "active" : "";
    var grp_fwa = Model.Group == "FWA" ? "active" : "";
    var grp_fwal = Model.Group == "FWAL" ? "active" : "";
}

<ul class="pagination">
    <li class="@grp_all"><a asp-area="" asp-controller="Syncs" asp-action="Index">All</a></li>
    <li class="@grp_fwa"><a asp-area="" asp-controller="Syncs" asp-action="FWA">FWA</a></li>
    <li class="@grp_fwal"><a asp-area="" asp-controller="Syncs" asp-action="FWAL">FWAL</a></li>
</ul>

<table id="myTable" class="table table-hover table-responsive tablesorter">
    <thead>
        <tr>
            <th width="35"></th>
            <th>
                Clan
            </th>
            @foreach (var warSync in Model.Syncs)
            {
                <th>
                    @Html.DisplayFor(s => warSync.Name)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in Model.Clans)
        {
            <tr>
                <td style="padding:0px;">
                    <img src="@clan.BadgeUrl" width="35" height="35" />
                </td>
                <td>
                    <a asp-route-id="@clan.LinkID" asp-area="" asp-controller="Clans" asp-action="Details">@clan.Name</a>
                </td>
                @foreach (var warResult in clan.Results)
                {
                    var result_class = "";
                    if (warResult.Result == "win")
                    {
                        result_class = "text-success";
                    }
                    else if (warResult.Result == "lose")
                    {
                        result_class = "text-danger";
                    }
                    else
                    {
                        result_class = "text-muted";
                    }
                    <td>
                        <a class="@result_class" asp-route-id="@warResult.OpponentLinkID" asp-area="" asp-controller="Clans" asp-action="Details">@warResult.OpponentName</a>
                        @if (!string.IsNullOrEmpty(warResult.OpponentTag) && !warResult.IsAlliance)
                        {
                            <small class="label label-danger">W<span class="hidden-xs">ar clan</span></small>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script type="text/javascript">

        $(function () {
            $("#myTable").tablesorter();
        });

    </script>
}