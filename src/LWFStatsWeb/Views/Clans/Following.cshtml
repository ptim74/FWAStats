@model List<LWFStatsWeb.Models.ClanViewModels.FollowingClan>

@{
    ViewBag.Title = "Following Clans";
}

<h2>Following Clans</h2>

<table id="myTable" class="table table-hover table-responsive tablesorter">
    <thead>
        <tr>
            <th width="35"></th>
            <th>
                Clan
            </th>
            <th>
                Wars
            </th>
            <th>
                Latest
            </th>
            <th>
                Against
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in Model)
        {
            <tr>
                <td style="padding:0px;">
                    <img src="@clan.BadgeURL" width="35" height="35" />
                </td>
                <td>
                    <a asp-route-id="@clan.Tag" asp-area="" asp-controller="Clans" asp-action="Details">@clan.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => clan.Wars)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => clan.LatestDate)
                </td>
                <td>
                    <a asp-route-id="@clan.LatestTag" asp-area="" asp-controller="Clans" asp-action="Details">@clan.LatestClan</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script type="text/javascript">

        $(function () {
            $("#myTable").tablesorter();
        });

    </script>
}