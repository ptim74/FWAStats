@model List<LWFStatsWeb.Models.ClanViewModels.ClanIndexClan>

@{
    ViewBag.Title = "Clans";
    ViewBag.MetaDescription = "List of clans in LWF, Loot War Fellowship, Clash of Clans";
}

<h2>LWF Clans</h2>

<table id="myTable" class="table table-hover table-responsive tablesorter">
    <thead>
        <tr>
            <th width="35"></th>
            <th>
                Clan
            </th>
            <th>
                <span class="glyphicon glyphicon-user"></span>
            </th>
            <th>
                <span>War Results</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clan in Model)
        {
            <tr>
                <td style="padding:0px;">
                    <img src="@clan.BadgeURL" width="35" height="35" />
                </td>
                <td>
                    <a asp-route-id="@clan.LinkID" asp-area="" asp-controller="Clans" asp-action="Details">@clan.Name</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => clan.Members)
                </td>
                <td>
                    @foreach (var warResult in clan.Results)
                {
                    if (warResult.Result == "win")
                    {
                            <div class="label label-success">&nbsp;</div>
                        }
                        else if (warResult.Result == "lose")
                        {
                            <div class="label label-danger">&nbsp;</div>
                        }
                        else
                        {
                            <div class="label label-default">&nbsp;</div>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script type="text/javascript">

    $(function () {
        $("#myTable").tablesorter();
    });

    </script>
}